<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jwtauth.schoolauthorization.user.repository.UserDataRepository">

    <resultMap id="UserResultMap" type="com.jwtauth.schoolauthorization.user.entity.UserData">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="role" property="role"/>
    </resultMap>

    <select id="findUserByUsername"
            resultMap="UserResultMap" resultType="com.jwtauth.schoolauthorization.user.entity.UserData"
            parameterType="java.lang.String">
        SELECT id, username, password, role from user_data where username = #{username}
    </select>

</mapper>